{
  "name": "@vue-bridge/monorepo",
  "version": "0.1.0",
  "description": "A monorepo template for developing Vue libraries",
  "author": "Thorsten LÃ¼nborg <thorsten@linusb.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "v2": "vue-demi-switch 2",
    "v3": "vue-demi-switch 3",
    "docs:dev": "cd packages/docs && pnpm start",
    "test": "pnpm test:2 && pnpm test:3",
    "test:2": "pnpm workspace example-library-vue2 test",
    "test:3": "pnpm workspace example-library test",
    "lint": "lerna run lint -- --fix",
    "build": "pnpm build:packages && pnpm build:playground && pnpm build:docs",
    "build:packages": "lerna run build --scope @vue-bridge/*",
    "build:playground": "lerna run build --scope '{app-*,example-library*}'",
    "build:docs": "lerna run build --scope 'docs'",
    "version": "pnpm changeset version",
    "release": "pnpm build:packages && pnpm changeset publish",
    "cypress": "cypress run --config-file cypress/cypress.json",
    "cypress:open": "cypress open --config-file cypress/cypress.json"
  },
  "pnpm": {
    "overrides": {
      "vscode-vue-languageservice": "0.27.30"
    }
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@cypress/vite-dev-server": "^2.2.0",
    "@cypress/vue": "^3.0.3",
    "@linusborg/eslint-config": "^0.1.0",
    "@vue/test-utils": "^2.0.0-beta.13",
    "cypress": "^8.0.0",
    "eslint": "^7.17.0",
    "lerna": "^4.0.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.1.0",
    "vite": "^2.4.0",
    "vue": "^2.6.14",
    "vue-template-compiler": "^2.6.14",
    "vue-tsc": "^0.3.0"
  }
}
