{
  "name": "@vue-bridge/monorepo",
  "version": "0.1.0",
  "description": "A monorepo template for developing Vue libraries",
  "author": "Thorsten LÃ¼nborg <thorsten@linusb.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "docs:dev": "cd packages/docs && pnpm start",
    "test": "pnpm test:2 && pnpm test:3",
    "test:2": "pnpm workspace example-library-vue2 test",
    "test:3": "pnpm workspace example-library test",
    "lint": "lerna run lint -- --fix",
    "build": "pnpm build:packages && pnpm build:playground && pnpm build:docs",
    "build:packages": "lerna run build --scope @vue-bridge/*",
    "build:playground": "lerna run build --scope '{app-*,example-library*}'",
    "build:docs": "lerna run build --scope 'docs'",
    "version": "pnpm changeset version",
    "release": "pnpm build:packages && pnpm changeset publish"
  },
  "pnpm": {
    "overrides": {
      "vscode-vue-languageservice": "0.29.6"
    },
    "packageExtensions": {
      "vue-template-compiler": {
        "dependencies": {
          "vue": "^2.6"
        }
      }
    }
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "@linusborg/eslint-config": "^0.2.1",
    "eslint": "^8.5.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2",
    "vite": "^2.6.14"
  }
}
