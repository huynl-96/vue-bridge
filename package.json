{
  "name": "vue-bridge-monorepo",
  "version": "0.1.0",
  "description": "A monorepo template for developing Vue libraries",
  "author": "Thorsten LÃ¼nborg <thorsten@linusb.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "docs:dev": "cd docs && pnpm dev",
    "test": "pnpm run test --filter 'example-library*' --parallel --aggregate-output -- --run",
    "test:2": "pnpm workspace example-library-vue2 test",
    "test:3": "pnpm workspace example-library test",
    "lint": "pnpm run lint -r --if-present --parallel -- --fix",
    "build": "pnpm build:packages && pnpm build:playground && pnpm build:docs",
    "build-ci": "pnpm build:packages && pnpm build:playground",
    "build:packages": "pnpm run build --filter @vue-bridge/* --parallel --aggregate-output",
    "build:playground": "pnpm run build --filter '...example-library*'",
    "build:docs": "pnpm build --filter 'docs'",
    "version": "pnpm changeset version",
    "release": "pnpm test && pnpm build:packages && pnpm changeset publish"
  },
  "pnpm": {
    "overrides": {
      "vscode-vue-languageservice": "0.33.10"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "@types/react",
        "@algolia/client-search"
      ]
    },
    "packageExtensions": {
      "vue-template-compiler": {
        "dependencies": {
          "vue": "^2.6"
        }
      }
    }
  },
  "engines": {
    "node": ">=16",
    "pnpm": "6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "pnpm exec eslint --max-warnings 0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@linusborg/eslint-config": "^0.2.1",
    "@types/node": "^16.11.26",
    "cypress": "^9.5.3",
    "eslint": "^8.12.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.1",
    "simple-git-hooks": "^2.7.0",
    "tslib": "^2.0.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.1",
    "vitest": "^0.8.1",
    "vue-tsc": "^0.33.9"
  }
}
