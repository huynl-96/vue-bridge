{
  "name": "vue-lib-monorepo-template",
  "version": "0.1.0",
  "description": "A monorepo template for developing Vue libraries",
  "author": "Thorsten LÃ¼nborg <thorsten@linusb.org>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/playground/*"
    ],
    "nohoist": [
      "example-library-vue2/vue",
      "example-library-vue2/vue-template-compiler",
      "example-library-vue2/vue-jest",
      "example-library-vue2/@vue/test-utils"
    ]
  },
  "scripts": {
    "v2": "vue-demi-switch 2",
    "v3": "vue-demi-switch 3",
    "docs:dev": "cd packages/docs && yarn start",
    "test:all": "jest --runInBand --config jest.config.ts",
    "test:w": "jest --runInBand --config jest.config.ts --watch",
    "test:packages": "lerna run test --stream --scope '@linusborg/*'  --",
    "lint": "lerna run lint -- --fix",
    "build": "yarn build:packages && yarn build playground && yarn build:docs",
    "build:packages": "lerna run build --scope @vue-bridge/runtime",
    "build:playground": "lerna run build --scope 'playground'",
    "build:docs": "lerna run build --scope 'docs'",
    "cypress": "cypress run --config-file cypress/cypress.json",
    "cypress:open": "cypress open --config-file cypress/cypress.json"
  },
  "devDependencies": {
    "@linusborg/eslint-config": "^0.1.0",
    "@types/jest": "^26.0.20",
    "@vitejs/plugin-vue": "^1.0.4",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/test-utils": "^2.0.0-beta.13",
    "cypress": "^7.4.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.17.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rollup-plugin-dts": "^2.0.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.0",
    "vite": "^2.4.0",
    "vue": "^3.1.5",
    "vue-jest": "^5.0.0-alpha.7",
    "vue-tsc": "^0.1.2"
  },
  "dependencies": {
    "ts-node": "^10.0.0"
  }
}
