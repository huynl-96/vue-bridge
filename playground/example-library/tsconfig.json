{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./typings",

    "baseUrl": ".",
    "paths": {
      "virtual-bridge:./helpers/index": ["src/components/helpers/index.vue3"],
      "@/*": ["src/*"],
      "v-bridge:@/*": ["src/*.vue3"]
    }
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.js"
  ],
}