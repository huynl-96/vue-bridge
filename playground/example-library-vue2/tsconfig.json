{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./typings",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@vue-bridge/runtime": ["@vue-bridge/runtime/vue2"],
      "v-bridge:@/*": ["src/*.vue2"]
    }
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts"
  ]
}