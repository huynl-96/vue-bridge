{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    
    // trying to get auto `import type` insertion for type imports
    // doesn't work so far: https://github.com/microsoft/TypeScript/pull/36412#issuecomment-707221008
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    //

    "allowJs":true,
    "declaration": true,
    "sourceMap": true,   
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "types": ["vite/client", "jest", "cypress"],
    "paths": {
      "vue3-compat-lib": ["packages/vue3-compat-lib/src/main.ts"],
      "vite-plugin-vue3-compat-lib": ["packages/vite-plugin-vue3-compat-lib/src/index.ts"]
    }
  },
  "include": [
    "/config/*.ts",
    "/**/src/**/*.ts",
    "/**/src/**/*.js",
    "/**/src/**/*.vue",
    "/packages/docs/**/*.vue",
    "/packages/docs/**/*.js",
    "/cypress/**/*.js",
    // necessary for un-breaking jest types broken by cypress' chai dependency
    // https://github.com/cypress-io/cypress/issues/1087#issuecomment-353370449
    "./node_modules/jest", 
  ]
}