{
  "name": "@vue-bridge/vite-plugin",
  "version": "0.0.3",
  "description": "A Vite Plugin to build Vue libraries for both Vue 2 and Vue 3",
  "author": "Thorsten Luenborg",
  "repository": {
    "type": "git",
    "url": "https://github.com/LinusBorg/vue-bridge.git",
    "directory": "packages/vite-plugin"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup-node index.ts --format esm,cjs --dts",
    "build:w": "pnpm build -- --watch"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "resolve-pkg": "^2.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "debug": "^4.3.3",
    "tsup": "^5.11.9",
    "vite": "^2.7.9"
  },
  "peerDependencies": {
    "vite": "^2.7.9"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  }
}
